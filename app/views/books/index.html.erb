

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        プロフィール画像
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>



<h2>New book</h2>

<%= form_with model: @new_book, local:true do |f| %>
  <label for="book_title">Title</label><br>
    <%= f.text_field :title %><br>
  <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
